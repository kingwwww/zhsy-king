<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.example.lenovo.eatapplication.fragment.enter.LoginFragment"
              android:orientation="vertical"
              android:weightSum="1">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.01">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView"
            android:gravity="center"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:typeface="serif"
            android:fontFamily="sans-serif"
            android:text="登录界面"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        >
<RadioGroup
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1"
    android:layout_marginLeft="20dp"
    >
        <RadioButton
            android:text="用户"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_login_user"
            android:gravity="center"
            android:checked="true"
            android:layout_weight="0.50"/>

    <RadioButton
        android:text="商户"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/radio_login_store"
        android:checked="false"
        android:layout_weight="0.46"/>
</RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:weightSum="1"
        android:layout_weight="0.29">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="44dp"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                app:srcCompat="@android:drawable/ic_menu_call"
                android:id="@+id/image_product"
                android:layout_weight="0.16"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:hint="请输入手机号"
                android:id="@+id/edit_login_phone"
                android:layout_weight="0.16"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="41dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/ic_lock_lock"
                android:id="@+id/imageView2"
                android:layout_weight="0.62"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="请输入密码"
                android:id="@+id/edit_login_password"
                android:layout_weight="0.62"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:weightSum="1">

        <EditText
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:hint="输入二维码"
            android:layout_marginLeft="30dp"
            android:ems="10"
            android:id="@+id/edit_login_code"
            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/image_login_code"
            android:layout_marginLeft="50dp"
            android:layout_weight="0.27"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:text="登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_login"
            android:layout_weight="1"/>

        <Button
            android:text="--->注册"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_go_register"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
